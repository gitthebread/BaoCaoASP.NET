@model Product
<form class="container-4" asp-action="SearchResult" method="get">
    <div class="row pb-2">
        <h2 class="text-black">Search for an item</h2>
        <hr />
    </div>
    <div class="mb-3">
        <label for="searchstr"></label>
        <input name="searchstr" placeholder="Search for name" style="width:500px;">
    </div>
    <button type="submit" class="btn btn-primary">Search</button>
    <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Back to Product</a>
</form>

<style>
    .container-4 {
        /*overflow: hidden;*/
        width: 300px;
        vertical-align: middle;
        white-space: nowrap;
    }

        .container-4 input#search {
            width: 600px;
            height: 50px;
            background: #2b303b;
            border: none;
            font-size: 14pt;
            float: left;
            color: #fff;
            padding-left: 15px;
            border-radius: 20px;
        }

        .container-4 button.icon {
            width: 70px;
            height: 50px;
            border-radius: 15px;
            padding-left: 5px;
            padding-top: 5px;
            font-size: 10pt;
            background: #2b303b;
            color: #fff;
        }
</style>

